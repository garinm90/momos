---
import Layout from '../layouts/Layout.astro';

const faqs = [
  {
    question: "Are your pretzels vegetarian?",
    answer: "Yes, all our pretzels are vegetarian. We use real butter, so they're not vegan, but we're working on a vegan option!"
  },
  {
    question: "Do you offer gluten-free options?",
    answer: "Currently, all our pretzels contain gluten. We know there's demand for gluten-free options and are exploring possibilities for the future."
  },
  {
    question: "How long do the pretzels stay fresh?",
    answer: "Our pretzels are best enjoyed the day of purchase. However, they can be stored in an airtight container for 2-3 days. Reheat in the oven at 350¬∞F for 5 minutes to restore that fresh-baked taste!"
  }
];
---

<Layout title="Contact | Momo's Pretzels" description="Get in touch with Momo's Pretzels. Questions, special orders, or just want to say hello - we'd love to hear from you!">
  <!-- Hero -->
  <section class="bg-gradient-to-b from-salt-white to-warm-cream py-12">
    <div class="max-w-6xl mx-auto px-5">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
        <div class="text-center md:text-left">
          <h1 class="font-display text-4xl md:text-5xl font-bold text-deep-brown mb-4">
            Get in Touch
          </h1>
          <p class="text-lg text-sesame-brown">
            Have questions, want to place a special order, or just want to say hello? We'd love to hear from you!
          </p>
        </div>
        <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-xl">
          <img
            src="/images/contact-welcome.jpg"
            alt="Welcoming scene at Momo's Pretzels market booth"
            class="w-full h-full object-cover"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form & Info -->
  <section class="py-12 bg-salt-white">
    <div class="max-w-6xl mx-auto px-5">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-10">
        <!-- Contact Form -->
        <div class="lg:col-span-3">
          <div class="bg-warm-cream rounded-2xl p-8">
            <h2 class="font-display text-2xl font-bold text-deep-brown mb-6">
              Send Us a Message
            </h2>

            <form action="https://formspree.io/f/your-form-id" method="POST" class="space-y-5">
              <div>
                <label for="name" class="block text-sm font-medium text-deep-brown mb-2">
                  Your Name <span class="text-error">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-lg border-2 border-sesame-brown/30 bg-salt-white focus:border-golden-crust focus:ring-4 focus:ring-golden-crust/10 transition-all"
                  placeholder="Jane Doe"
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-deep-brown mb-2">
                  Email <span class="text-error">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border-2 border-sesame-brown/30 bg-salt-white focus:border-golden-crust focus:ring-4 focus:ring-golden-crust/10 transition-all"
                  placeholder="jane@example.com"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-deep-brown mb-2">
                  Phone (optional)
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-3 rounded-lg border-2 border-sesame-brown/30 bg-salt-white focus:border-golden-crust focus:ring-4 focus:ring-golden-crust/10 transition-all"
                  placeholder="(555) 123-4567"
                />
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-deep-brown mb-2">
                  What's this about?
                </label>
                <select
                  id="subject"
                  name="subject"
                  class="w-full px-4 py-3 rounded-lg border-2 border-sesame-brown/30 bg-salt-white focus:border-golden-crust focus:ring-4 focus:ring-golden-crust/10 transition-all"
                >
                  <option value="general">General Question</option>
                  <option value="order">Special Order</option>
                  <option value="catering">Event/Catering</option>
                  <option value="feedback">Feedback</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-deep-brown mb-2">
                  Message <span class="text-error">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="5"
                  class="w-full px-4 py-3 rounded-lg border-2 border-sesame-brown/30 bg-salt-white focus:border-golden-crust focus:ring-4 focus:ring-golden-crust/10 transition-all resize-none"
                  placeholder="Tell us what's on your mind..."
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-golden-crust text-salt-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-caramel hover:-translate-y-0.5 transition-all shadow-md hover:shadow-lg"
              >
                Send Message
              </button>
            </form>
          </div>
        </div>

        <!-- Contact Info -->
        <div class="lg:col-span-2 space-y-6">
          <div class="bg-warm-cream rounded-2xl p-6">
            <h3 class="font-display text-xl font-semibold text-deep-brown mb-4">
              Other Ways to Reach Us
            </h3>

            <div class="space-y-4">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-full bg-golden-crust/20 flex items-center justify-center flex-shrink-0">
                  üìß
                </div>
                <div>
                  <h4 class="font-semibold text-deep-brown">Email</h4>
                  <a href="mailto:momospretzels@gmail.com" class="text-caramel hover:underline">
                    momospretzels@gmail.com
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-full bg-golden-crust/20 flex items-center justify-center flex-shrink-0">
                  üí¨
                </div>
                <div>
                  <h4 class="font-semibold text-deep-brown">Social Media</h4>
                  <p class="text-sm text-sesame-brown mb-2">DM us anytime!</p>
                  <div class="flex gap-3">
                    <a
                      href="https://www.facebook.com/profile.php?id=61584372426813"
                      target="_blank"
                      rel="noopener"
                      class="w-8 h-8 rounded-full bg-deep-brown flex items-center justify-center text-warm-cream hover:bg-golden-crust transition-colors"
                      aria-label="Facebook"
                    >
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"/></svg>
                    </a>
                    <a
                      href="https://instagram.com/momospretzels"
                      target="_blank"
                      rel="noopener"
                      class="w-8 h-8 rounded-full bg-deep-brown flex items-center justify-center text-warm-cream hover:bg-golden-crust transition-colors"
                      aria-label="Instagram"
                    >
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069z"/></svg>
                    </a>
                  </div>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-full bg-golden-crust/20 flex items-center justify-center flex-shrink-0">
                  üìç
                </div>
                <div>
                  <h4 class="font-semibold text-deep-brown">In Person</h4>
                  <p class="text-sm text-sesame-brown">
                    Find us at local farmers markets!
                  </p>
                  <a href="/find-us" class="text-caramel hover:underline text-sm">
                    See our schedule ‚Üí
                  </a>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-butter-yellow/30 rounded-2xl p-6 border border-butter-yellow">
            <h4 class="font-semibold text-deep-brown mb-2">‚è∞ Response Time</h4>
            <p class="text-sm text-sesame-brown">
              We typically respond within 24 hours. For urgent matters, give us a call or find us at the market!
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-12 bg-warm-cream">
    <div class="max-w-4xl mx-auto px-5">
      <h2 class="font-display text-3xl font-bold text-deep-brown text-center mb-10">
        Frequently Asked Questions
      </h2>

      <div class="space-y-4">
        {faqs.map((faq, index) => (
          <details class="group bg-salt-white rounded-xl shadow-sm">
            <summary class="flex items-center justify-between cursor-pointer p-5 font-semibold text-deep-brown hover:text-caramel transition-colors">
              {faq.question}
              <svg class="w-5 h-5 transform group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </summary>
            <div class="px-5 pb-5 text-sesame-brown">
              {faq.answer}
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-12 bg-deep-brown text-warm-cream">
    <div class="max-w-3xl mx-auto px-5 text-center">
      <h2 class="font-display text-3xl font-bold text-salt-white mb-4">
        Can't Wait to Hear From You!
      </h2>
      <p class="text-lg">
        Whether it's a question, a special order, or just to say hi‚Äîwe're here for you. Let's make something delicious together!
      </p>
    </div>
  </section>
</Layout>
