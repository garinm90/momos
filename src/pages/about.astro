const values = [
  {
    icon: "üåæ",
    title: "Fresh Ingredients",
    description: "We use only the finest, simple ingredients‚Äîno preservatives, no shortcuts."
  },
  {
    icon: "üëµ",
    title: "Traditional Methods",
    description: "Every pretzel is hand-twisted using techniques passed down through generations."
  },
  {
    icon: "ü§ù",
    title: "Community First",
    description: "We believe in building relationships, one pretzel at a time."
  },
  {
    icon: "‚ù§Ô∏è",
