const steps = [
  {
    number: "1",
    title: "Mix & Rest",
    description: "We start with a simple dough: flour, water, yeast, butter, and salt. Then we let it rest and rise."
  },
  {
    number: "2",
    title: "Hand-Twist",
    description: "Each pretzel is hand-rolled and twisted into its iconic shape. No machines, just hands and heart."
  },
  {
    number: "3",
    title: "Dip & Top",
    description: "A quick dip in our special solution gives that classic pretzel texture, then we add our toppings."
  },
  {
    number: "4",
    title: "Bake Fresh",
    description: "Every pretzel is baked fresh on market day. We wake up early so you can enjoy them warm!"
  }
