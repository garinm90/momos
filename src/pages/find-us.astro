---
import Layout from '../layouts/Layout.astro';

// Current location
const currentLocation = {
  name: "Christkindlmarket Roswell",
  dates: "November 21st ‚Äì December 23rd",
  venue: "Bulloch Hall Roswell",
  address: "180 Bulloch Ave, Roswell, GA 30075",
  mapsUrl: "https://maps.app.goo.gl/7PNpGqz7Ztugzuux5",
  hours: [
    { days: "Monday ‚Äì Thursday", time: "3 pm ‚Äì 8 pm" },
    { days: "Friday & Saturday", time: "12 pm ‚Äì 9 pm" },
    { days: "Sunday", time: "12 pm ‚Äì 8 pm" }
  ]
};
---

<Layout title="Find Us | Momo's Pretzels" description="Find Momo's Pretzels at farmers markets near you. Check our schedule for upcoming market dates and locations.">
  <!-- Hero -->
  <section class="relative bg-gradient-to-b from-salt-white to-warm-cream py-12 overflow-hidden">
    <div class="max-w-6xl mx-auto px-5">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
        <div class="text-center md:text-left">
          <h1 class="font-display text-4xl md:text-5xl font-bold text-deep-brown mb-4">
            üìç Find Us
          </h1>
          <p class="text-lg text-sesame-brown">
            We pop up at farmers markets throughout the area. Come say hello, grab some fresh-baked pretzels, and become part of the Momo's family!
          </p>
        </div>
        <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-xl">
          <img
            src="/images/farmers-market-booth.jpg"
            alt="Momo's Pretzels booth at the farmers market with customers"
            class="w-full h-full object-cover"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Upcoming Markets -->
  <section class="py-12 bg-salt-white">
    <div class="max-w-4xl mx-auto px-5">
      <h2 class="font-display text-3xl font-bold text-deep-brown mb-8 text-center">
        Upcoming Markets
      </h2>

      <div class="max-w-xl mx-auto">
        <div class="bg-salt-white rounded-xl overflow-hidden shadow-md border-l-4 border-golden-crust">
          <div class="bg-deep-brown text-salt-white px-5 py-4">
            <h3 class="font-display text-xl font-semibold">{currentLocation.name}</h3>
            <p class="text-warm-cream/80 text-sm mt-1">{currentLocation.dates}</p>
          </div>
          <div class="p-6">
            <p class="font-semibold text-deep-brown mb-1">{currentLocation.venue}</p>
            <p class="flex items-start gap-2 text-sesame-brown mb-5">
              <span>üìç</span>
              {currentLocation.address}
            </p>

            <div class="border-t border-warm-cream pt-4 mb-5">
              <p class="font-semibold text-deep-brown mb-3">Hours</p>
              <div class="space-y-2">
                {currentLocation.hours.map((schedule) => (
                  <div class="flex justify-between text-sesame-brown">
                    <span>{schedule.days}</span>
                    <span class="font-medium">{schedule.time}</span>
                  </div>
                ))}
              </div>
            </div>

            <a
              href={currentLocation.mapsUrl}
              target="_blank"
              rel="noopener"
              class="inline-flex items-center gap-2 bg-golden-crust text-salt-white px-5 py-2.5 rounded-full font-medium hover:bg-caramel transition-colors"
            >
              Get Directions
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Tips Section -->
  <section class="py-12 bg-warm-cream">
    <div class="max-w-4xl mx-auto px-5">
      <h2 class="font-display text-3xl font-bold text-deep-brown mb-8 text-center">
        üí° Tips for Your Visit
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-salt-white rounded-xl p-6 text-center">
          <div class="text-4xl mb-4">‚è∞</div>
          <h3 class="font-display text-lg font-semibold text-deep-brown mb-2">Come Early</h3>
          <p class="text-sesame-brown text-sm">
            Our most popular flavors sell out! Arrive early for the best selection.
          </p>
        </div>

        <div class="bg-salt-white rounded-xl p-6 text-center">
          <div class="text-4xl mb-4">üíµ</div>
          <h3 class="font-display text-lg font-semibold text-deep-brown mb-2">Cash & Card</h3>
          <p class="text-sesame-brown text-sm">
            We accept cash, credit cards, and most mobile payment apps.
          </p>
        </div>

        <div class="bg-salt-white rounded-xl p-6 text-center">
          <div class="text-4xl mb-4">üì¶</div>
          <h3 class="font-display text-lg font-semibold text-deep-brown mb-2">Pre-Order</h3>
          <p class="text-sesame-brown text-sm">
            Planning a large order? Contact us in advance to ensure availability.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Follow for Updates -->
  <section class="py-12 bg-deep-brown text-warm-cream">
    <div class="max-w-3xl mx-auto px-5 text-center">
      <h2 class="font-display text-3xl font-bold text-salt-white mb-4">
        Never Miss a Market
      </h2>
      <p class="text-lg mb-6">
        Follow us on social media for real-time updates, schedule changes, and sneak peeks of new flavors!
      </p>
      <div class="flex justify-center gap-4">
        <a
          href="https://facebook.com/momospretzels"
          target="_blank"
          rel="noopener"
          class="inline-flex items-center gap-2 bg-golden-crust text-salt-white px-6 py-3 rounded-full font-semibold hover:bg-caramel transition-all"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"/></svg>
          Facebook
        </a>
        <a
          href="https://instagram.com/momospretzels"
          target="_blank"
          rel="noopener"
          class="inline-flex items-center gap-2 bg-golden-crust text-salt-white px-6 py-3 rounded-full font-semibold hover:bg-caramel transition-all"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073z"/></svg>
          Instagram
        </a>
      </div>
    </div>
  </section>
</Layout>
