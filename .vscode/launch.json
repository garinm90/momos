{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Dev Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev"
    },
    {
      "name": "Build",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run build"
    },
    {
      "name": "Preview (Production)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run preview"
    },
    {
      "name": "Debug in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4321",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "npm: dev"
    }
  ]
}
